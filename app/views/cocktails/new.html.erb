<header class="d-flex justify-content-between align-items-center">
  <h2>Blend Your Own Potion</h2>
  <%= link_to "Back to shop", cocktails_path, class: "btn btn-danger" %>
</header>
<%= simple_form_for(@cocktail) do |f| %>
  <%= f.input :name, placeholder: "e.g. Long Life Potion"%>
  <%= f.input :description, placeholder: "What does this potion do?" %>
  <div class="form-row">
    <div class="col">
      <div class="form-group">
        <label for="ingredient1">Ingredient 1 <abbr title="required">*</abbr></label>
        <select class="form-control" id="ingredient1" name="ingredient1" required>
          <% Ingredient.all.each do |ingredient| %>
            <option><%= ingredient.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label for="ingredient1-amount">Quantity <abbr title="required">*</abbr></label>
        <input class="form-control" type="text" name="ingredient1_amount" id="ingredient1-amount" placeholder="e.g. 250g, 1 vial, etc." required>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <div class="form-group">
        <label for="ingredient2">Ingredient 2 <abbr title="required">*</abbr></label>
        <select class="form-control" id="ingredient2" name="ingredient2" required>
          <% Ingredient.all.each do |ingredient| %>
            <option><%= ingredient.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label for="ingredient2-amount">Quantity <abbr title="required">*</abbr></label>
        <input class="form-control" type="text" name="ingredient2_amount" id="ingredient2-amount" placeholder="e.g. 250g, 1 vial, etc." required>
      </div>
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <div class="form-group">
        <label for="ingredient3">Ingredient 3 <abbr title="required">*</abbr></label>
        <select class="form-control" id="ingredient3" name="ingredient3" required>
          <% Ingredient.all.each do |ingredient| %>
            <option><%= ingredient.name %></option>
          <% end %>
        </select>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label for="ingredient3-amount">Quantity <abbr title="required">*</abbr></label>
        <input class="form-control" type="text" name="ingredient3_amount" id="ingredient3-amount" placeholder="e.g. 250g, 1 vial, etc." required>
      </div>
    </div>
  </div>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Mix Potion", class:"btn btn-danger" %>
<% end %>