<h1><%= @cocktail.name  %></h1>

<div class="cocktail-show-card">
  <% asset_url = asset_url "cocktails/#{@cocktail.image}" %>
  <% url_text =  %>
  <%= content_tag :div, "", class: "potion-img", style: 'background-image: url("' + asset_url + '");' %>
  <div class="p-4">
    <h2><%= @cocktail.name %></h2>
    <p><%= "⭐" * @cocktail.rating %></p>
    <p><%= @cocktail.description %></p>
    <div class="btn btn-danger p-3">Add to Cart</div>
  </div>
</div>

<div class="ingredients-container p-5">
  <h2>Ingredients</h2>
  <ul>
    <% @doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
</div>
