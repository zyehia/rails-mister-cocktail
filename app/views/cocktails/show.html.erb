<h1><%= @cocktail.name  %></h1>

<div class="cocktail-show-card">
  <div class="container px-0">
    <div class="row h-100">
      <div class="col-xs-12 col-md-4">
        <%= content_tag :div, "", class: "potion-img", style: "background-image: url(#{cl_image_path @cocktail.photo.key});" %>
      </div>
      <div class="col-xs-12 col-md-8 cocktail-description">
        <div class="p-4">
          <h2><%= @cocktail.name %></h2>
          <p><%= "â­" * @cocktail.rating %></p>
          <p><%= @cocktail.description %></p>
          <div class="btn btn-danger p-3">Add to Cart</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="ingredients-container p-5">
  <h2>Ingredients</h2>
  <ul>
    <% @doses.each do |dose| %>
      <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
</div>
