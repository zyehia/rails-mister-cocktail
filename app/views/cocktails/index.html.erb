<h1 class="mb-4"><i class="fas fa-feather-alt"></i> <strong>Ye Olde Potion Shop</strong></h1>
<div class="d-flex justify-content-center">
  <div class="cards-grid mt-5">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 18rem;">
        <%= image_tag "cocktails/#{cocktail.image}", class: "card-img-top", style: "height: 200px;"%>
        <div class="card-body p-3">
          <h2 class="card-title"><strong><%= cocktail.name %></strong></h2>
          <p class="card-text" style="color:black;"><%= cocktail.description %></p>
          <%= link_to "Discover More", cocktail_path(cocktail), class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= image_tag "cocktails/smoke.png", style: "position: absolute; left:0; bottom:0;", width: "500px" %>
