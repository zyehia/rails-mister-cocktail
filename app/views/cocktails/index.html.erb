<header class="d-flex justify-content-between align-items-center">
  <h1 class="mb-4"><i class="fas fa-feather-alt"></i> <strong>Ye Olde Potion Shop</strong></h1>
  <%= link_to "Blend Your Own Potion", new_cocktail_path, class: "btn btn-danger"%>
</header>
<div class="d-flex justify-content-center">
  <div class="cards-grid my-5">
    <% @cocktails.each do |cocktail| %>
      <div class="card">
        <%= cl_image_tag cocktail.photo.key, class: "card-img-top", style: "height: 200px;"%>
        <div class="card-body p-3 d-flex flex-column justify-content-between">
          <h2 class="card-title"><strong><%= cocktail.name %></strong></h2>
          <p><%= "⭐" * cocktail.rating %></p>
          <p class="card-text" style="color:black;"><%= cocktail.description %></p>
          <%= link_to "Discover More", cocktail_path(cocktail), class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
